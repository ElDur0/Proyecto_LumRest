<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Icono de perfil -->
    <ImageView
        android:id="@+id/ivPerfil"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:contentDescription="Perfil"
        android:src="@drawable/ic_profile"
        android:layout_marginTop="8dp" />

    <!-- Bot贸n QR -->
    <Button
        android:id="@+id/btnQR"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ivPerfil"
        android:layout_marginTop="80dp"
        android:background="@drawable/rounded_border"
        android:text="Registro con con\nc贸digo QR."
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="16sp" />

    <!-- Bot贸n NFC -->
    <Button
        android:id="@+id/btnNFC"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/btnQR"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_border"
        android:text="Registro con NFC"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="16sp" />

    <!-- Bot贸n rojo: Llamar Mesero -->
    <Button
        android:id="@+id/btnLlamarMesero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Llamar Mesero"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#D32F2F"
        android:layout_below="@id/btnNFC"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp" />

    <!-- Texto inferior: Necesito Ayuda -->
    <TextView
        android:id="@+id/tvAyuda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Necesito Ayuda"
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp" />
</RelativeLayout>
